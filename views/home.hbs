                    </a>
                    
                    <a href="#" class="participant-link">
                      <img class="participant-img" src="/img/default-user-pic.jpg" alt="User Profile Picture" />
                    </a>
                    <a href="#" class="participant-number plain">
                      +33
                    </a>
                  </div>
                </div>
              </div>
              <!-- Meeting 2 -->
              <div class="col-md-4 col-sm-6 meeting-container">
                Meeting 2
              </div>
              <!-- Meeting 3 -->
              <div class="col-md-4 col-sm-6 meeting-container">
                Meeting 3
              </div>
          </div>    
        </div>
        <!-- end Meetings -->
        <!-- Notifications -->
        <div class="col-md-3 col-sm-4">
          <div class="notification-card">
            <div class="header-div">
              <h2 class="dashboard-header">Notifications</h2>
            </div>
            <div>
              <div class="notification-div">
                <div class="notification-icon">
                  <i class="fa fa-calendar-times-o calendar-cancel"></i> 
                </div>
                <div class=notification-text>
                  Organizer1 cancelled <a href="#">Meeting1</a>.
                 
                </div>
              </div>
              <div class="notification-div">
                <div class="notification-icon">
                  <i class="fa fa-calendar-plus-o calendar-invite"></i> 
                </div>
                <div class="notification-text">
                  Organizer2 invited you to <a href="#">Meeting2</a>.
                 
                </div>
              </div>
              <div class="notification-div">
                <div class="notification-icon">
                  <i class="fa fa-calendar-check-o calendar-reschedule"></i> 
                </div>
                <div class="notification-text">
                  Organizer3 rescheduled <a href="#">Meeting3</a>.
                </div>
              </div>
              <div class="notification-div">
                <div class="notification-icon">
                  <i class="fa fa-calendar-check-o calendar-schedule"></i> 
                </div>
